<aura:component controller="CampingListController" >
    
    <aura:attribute name="newItem" type="Camping_Item__c" 
                             default="{ 'sobjectType': 'Camping_Item__c',
                             'Name': '',
                             'Price__c': 0,
                             'Quantity__c': 0,
                             'Packed__c': false }"/>
    <aura:attribute name="items" type="Camping_Item__c[]" />
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    
    <lightning:layout class="slds-page-header slds-page-header--object-home">
        <lightning:layoutItem >
            <lightning:icon iconName="standard:scan_card" alternativeText="My Expenses"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">Camping List Item</h1>
                <h2 class="slds-text-heading--medium">My Camping List Items</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    
    <!-- NEW CAMPINGLISTITEM FORM -->
    <lightning:layout >
        <lightning:layoutItem padding="around-small" size="6">
    <!-- CREATE NEW EXPENSE -->
    <div aria-labelledby="newexpenseform">
        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme--default slds-container--small">
        <legend id="newexpenseform" class="slds-text-heading--small 
          slds-p-vertical--medium">
          Add Expense
        </legend>
  
        <!-- CREATE NEW EXPENSE FORM -->
        <form class="slds-form--stacked">          
            <lightning:input aura:id="itemform" label="Camping Item Name"
                             name="itemform"
                             value="{!v.newItem.Name}"
                             required="true"/>
            <lightning:input type="toggle" 
                             label="Packed?" 
                             checked="{!v.newItem.Packed__c}" 
                             name="packed"/>          
            <lightning:input type="number" aura:id="itemform" label="Price"
                             name="itemprice"
                             min="1"
                             formatter="currency"
                             step="1"
                             value="{!v.newItem.Price__c}"
                             messageWhenRangeUnderflow="Enter an amount that's at least Â£0.10."/>
            <lightning:input aura:id="expenseform" label="Quantity"
                             name="itemquantity"
                             min="1"
                             value="{!v.newItem.Quantity__c}"/>
            <lightning:button label="Create Item" 
                              class="slds-m-top--medium"
                              variant="brand"
                              onclick="{!c.clickCreateItem}" />
        </form>
        <!-- / CREATE NEW EXPENSE FORM -->
  
      </fieldset>
      <!-- / BOXED AREA -->
    </div>
    <!-- / CREATE NEW EXPENSE -->
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / NEW CAMPINGLISTITEM FORM -->
    <c:campingItemList campingItems="{!v.items}"/>
    
</aura:component>